{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "StarTrad FR-Portable",
    "version": "2.0.5",
    "identifier": "com.drrakendu78.startradfr.portable",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "StarTrad FR - Portable",
                "minWidth": 1280,
                "minHeight": 750,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": false,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "wix": {
                "language": "fr-FR"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": false,
            "pubkey": ""
        }
    }
} 


