{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "StarTrad FR",
    "version": "2.0.2",
    "identifier": "com.drrakendu78.startradfr.store",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "StarTrad FR",
                "minWidth": 1230,
                "minHeight": 690,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["msi"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "publisher": "Drrakendu78",
        "windows": {
            "webviewInstallMode": {
                "type": "offlineInstaller"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": false
        }
    }
} 