{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "StarTrad FR",
    "version": "3.0.3",
    "identifier": "com.drrakendu78.startradfr",
    "build": {
        "beforeDevCommand": "",
        "devUrl": "https://startradfr.vercel.app",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "StarTrad FR",
                "width": 1294,
                "height": 992,
                "resizable": true,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": "default-src 'self' https://startradfr.vercel.app; script-src 'self' https://startradfr.vercel.app https://www.youtube.com 'unsafe-inline'; style-src 'self' https://startradfr.vercel.app 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https://startradfr.vercel.app http://localhost:1421 https://api.github.com https://api.allorigins.win https://leonick.se https://www.star-citizen-characters.com https://*.supabase.co https://supabase.co https://cdn.discordapp.com https://www.youtube.com; frame-src 'self' https://www.erkul.games https://maps.adi.sc https://www.youtube.com;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "installMode": "currentUser",
                "languages": ["French"],
                "displayLanguageSelector": false,
                "compression": "lzma"
            },
            "wix": {
                "language": "fr-FR"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": true,
            "endpoints": [
                "https://api.github.com/repos/drrakendu78/TradSC/releases/latest"
            ],
            "dialog": true,
            "pubkey": "",
            "windows": {
                "installMode": "quiet"
            }
        }
    }
}