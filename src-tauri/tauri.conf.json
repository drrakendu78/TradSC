{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "StarTrad FR",
    "version": "2.0.6",
    "identifier": "com.drrakendu78.startradfr",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "StarTrad FR",
                "width": 1294,
                "height": 850,
                "minWidth": 1280,
                "minHeight": 750,
                "center": true,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "wix": {
                "language": "fr-FR"
            },
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "installMode": "currentUser",
                "languages": ["French"],
                "displayLanguageSelector": false,
                "compression": "lzma"
            }
        }
    },
    "plugins": {
        "updater": {
            "active": false,
            "pubkey": ""
        }
    }
}